{
  "name": "@scxml/xstate",
  "version": "0.1.0",
  "description": "Convert SCXML documents to executable XState machines with TypeScript support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "dev": "tsc --watch",
    "docs": "typedoc",
    "docs:md": "typedoc --plugin typedoc-plugin-markdown --out docs-md",
    "docs:serve": "npx http-server docs -p 8080",
    "docs:build": "npm run docs && npm run docs:md"
  },
  "keywords": [
    "scxml",
    "xstate",
    "typescript",
    "state-machine",
    "converter",
    "statechart",
    "w3c"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/caweinshenker/scxml-js.git",
    "directory": "packages/xstate"
  },
  "homepage": "https://caweinshenker.github.io/scxml-js/",
  "bugs": {
    "url": "https://github.com/caweinshenker/scxml-js/issues"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@scxml/parser": "^0.1.0",
    "xstate": "^5.21.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.28.12",
    "typedoc-plugin-markdown": "^3.16.0",
    "typedoc-plugin-mermaid": "^1.10.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

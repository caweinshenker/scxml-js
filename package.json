{
  "name": "@scxml/parser",
  "version": "0.1.0",
  "description": "A comprehensive TypeScript SCXML parsing and manipulation library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "dev": "tsc --watch",
    "docs": "typedoc",
    "docs:md": "typedoc --plugin typedoc-plugin-markdown --out docs-md",
    "docs:serve": "npx http-server docs -p 8080",
    "docs:build": "npm run docs && npm run docs:md"
  },
  "keywords": ["scxml", "typescript", "state-machine", "parser", "xml", "state-chart", "w3c"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@types/xml-js": "^1.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "typedoc": "^0.25.0",
    "typedoc-plugin-markdown": "^3.16.0",
    "typedoc-plugin-mermaid": "^1.10.0"
  }
}